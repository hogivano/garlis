<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:mapbox="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.CompleteRegisterActivity">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="45dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:background="@drawable/bg_complete">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="Data Diri"
                        android:textColor="@android:color/white"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:id="@+id/textDataDiri"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        app:layout_constraintTop_toBottomOf="@id/textDataDiri"
                        android:textAlignment="center"
                        android:text="Lengkapi data dirimu dengan baik dan benar"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp"
                        android:id="@+id/textKetDataDiri"/>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/textKetDataDiri"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:id="@+id/profil">
                        <de.hdodenhof.circleimageview.CircleImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/profil"
                                app:civ_border_width="2dp"
                                app:civ_border_color="#FFd3d3d3"
                                android:id="@+id/imgProfil"
                                android:scaleType="centerCrop"/>
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_edit_black_24dp"
                                android:layout_alignEnd="@+id/imgProfil"
                                android:layout_alignBottom="@+id/imgProfil"
                                android:layout_marginRight="5dp"/>
                </RelativeLayout>
                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_info_outline_black_24dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.237"
                        android:id="@+id/info"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@+id/info"
                        android:paddingHorizontal="20dp"
                        android:layout_marginTop="40dp"
                        android:id="@+id/form">
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                android:text="Nama"
                                android:layout_marginTop="30dp"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:textSize="12sp"
                                android:id="@+id/textNama"/>
                        <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:id="@+id/nama"
                                android:paddingBottom="15dp"
                                android:textColor="@color/textBlack"
                                app:layout_constraintTop_toBottomOf="@+id/textNama"/>
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/nama"
                                android:text="No Telp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:textSize="12sp"
                                android:id="@+id/textNoTelp"/>
                        <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:id="@+id/noTelp"
                                android:paddingBottom="15dp"
                                android:inputType="number"
                                android:textColor="@color/textBlack"
                                app:layout_constraintTop_toBottomOf="@+id/textNoTelp"/>
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/noTelp"
                                android:text="Daftar sebagai"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:textSize="12sp"
                                android:id="@+id/textPilihRole"/>

                        <RadioGroup
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:id="@+id/pilihRole"
                                android:layout_marginTop="10dp"
                                app:layout_constraintTop_toBottomOf="@+id/textPilihRole">
                                <RadioButton android:id="@+id/regar"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content"
                                             android:layout_marginRight="5dp"
                                             android:text="Regar"/>
                                <RadioButton android:id="@+id/figar"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content"
                                             android:layout_marginLeft="5dp"
                                             android:text="Figar"/>
                        </RadioGroup>
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/pilihRole"
                                android:text="Alamat"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:textSize="12sp"
                                android:id="@+id/textAlamat"/>
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/blockAlamat"
                                android:orientation="horizontal"
                                app:layout_constraintTop_toBottomOf="@+id/textAlamat">
                                <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:layout_weight="1"
                                        android:id="@+id/inputAlamat"
                                        android:paddingBottom="15dp"
                                        android:inputType="text"
                                        android:textColor="@color/textBlack"/>
                                <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:src="@drawable/ic_map_accent_24dp"
                                        android:id="@+id/alamat"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginLeft="5dp"/>
                        </LinearLayout>
                        <!--<Button-->
                        <!--android:layout_width="100dp"-->
                        <!--android:layout_height="40dp"-->
                        <!--android:layout_marginTop="10dp"-->
                        <!--android:text="Alamat"-->
                        <!--android:textColor="@android:color/white"-->
                        <!--android:background="@color/colorPrimary"-->
                        <!--android:textSize="12sp"-->
                        <!--android:id="@+id/alamat"-->
                        <!--app:layout_constraintTop_toBottomOf="@+id/inputAlamat"-->
                        <!--app:layout_constraintRight_toRightOf="parent"-->
                        <!--app:layout_constraintLeft_toLeftOf="parent"/>-->
                        <com.mapbox.mapboxsdk.maps.MapView
                                android:id="@+id/idMapView"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                mapbox:mapbox_cameraTargetLat="-7.257472"
                                mapbox:mapbox_cameraTargetLng="112.752090"
                                mapbox:mapbox_cameraZoom="10"
                                android:layout_marginTop="20dp"
                                app:layout_constraintTop_toBottomOf="@+id/blockAlamat"/>
                        <Button android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:text="Simpan"
                                android:layout_marginHorizontal="30dp"
                                android:textColor="@android:color/white"
                                android:background="@color/colorPrimaryDark"
                                android:layout_marginTop="20dp"
                                android:id="@+id/btnSimpan"
                                android:textSize="13sp"
                                app:layout_constraintTop_toBottomOf="@+id/idMapView"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
></ScrollView>