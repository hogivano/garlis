<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="20dp"
        android:elevation="3dp"
        android:background="@android:color/white"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/no_image"
            android:scaleType="centerCrop"
            android:id="@+id/img"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Sampah Plastik"
            android:textSize="17sp"
            android:textColor="@color/textBlack"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/img"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/judul"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/judul"
            app:layout_constraintLeft_toRightOf="@+id/img"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:text="Organik"
            android:id="@+id/jenis"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintLeft_toRightOf="@+id/img"
            app:layout_constraintTop_toBottomOf="@+id/jenis"
            android:id="@+id/info"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/ic_info_blue_24dp"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintLeft_toRightOf="@+id/info"
            app:layout_constraintTop_toBottomOf="@+id/jenis"
            android:id="@+id/delete"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/ic_delete_black_24dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/berat"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="3.5 Kg"
            android:textSize="17sp"
            android:layout_marginTop="12dp"
            android:textColor="@color/textBlack"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/mapsIcon"
            android:src="@drawable/ic_map_accent_24dp"
            app:layout_constraintTop_toBottomOf="@+id/berat"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>