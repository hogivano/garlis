<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:mapbox="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.activity.BuatSampahActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:background="@drawable/bg_buat_sam_kat">
        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:id="@+id/back"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/simpan"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="14dp"
                android:layout_marginTop="23dp"
                android:layout_marginRight="20dp"
                android:textColor="@android:color/white"
                android:text="SIMPAN"
                android:textStyle="bold"/>
        <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="80dp"
                android:id="@+id/img"
                android:src="@drawable/no_image"
                android:scaleType="fitXY"
                android:elevation="2dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:padding="20dp"
                android:elevation="5dp"
                android:id="@+id/form"
                android:layout_marginBottom="30dp"
                android:background="@android:color/white"
                app:layout_constraintTop_toBottomOf="@+id/img"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Judul"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:textSize="12sp"
                    android:id="@+id/textJudul"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:id="@+id/judul"
                    android:paddingBottom="15dp"
                    android:inputType="text"
                    android:textColor="@color/textBlack"
                    app:layout_constraintTop_toBottomOf="@+id/textJudul"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/judul"
                    android:text="Deskripsi"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:textSize="12sp"
                    android:id="@+id/textDeskripsi"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textSize="14sp"
                    android:id="@+id/deskripsi"
                    android:paddingBottom="15dp"
                    android:textColor="@color/textBlack"
                    app:layout_constraintTop_toBottomOf="@+id/textDeskripsi"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/deskripsi"
                    android:text="Jenis"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:textSize="12sp"
                    android:id="@+id/textJenis"/>
            <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/jenis_sampah"
                    android:prompt="@string/prompt_jenis"
                    android:id="@+id/jenis"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/textJenis"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/jenis"
                    android:text="Berat Kisaran (Kg)"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:textSize="12sp"
                    android:id="@+id/textBerat"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:id="@+id/berat"
                    android:paddingBottom="15dp"
                    android:textColor="@color/textBlack"
                    app:layout_constraintTop_toBottomOf="@+id/textBerat"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/berat"
                    android:text="Lokasi"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:textSize="12sp"
                    android:id="@+id/textLokasi"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:id="@+id/btnLokasi"
                    android:layout_marginTop="15dp"
                    android:textColor="@android:color/white"
                    android:text="Pilih lokasi"
                    android:background="@color/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@+id/textLokasi"/>
            <com.mapbox.mapboxsdk.maps.MapView
                    android:id="@+id/idMapView"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    mapbox:mapbox_cameraTargetLat="-7.257472"
                    mapbox:mapbox_cameraTargetLng="112.752090"
                    mapbox:mapbox_cameraZoom="10"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/btnLokasi"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>